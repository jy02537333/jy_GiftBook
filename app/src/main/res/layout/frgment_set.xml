<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#F53930"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="设置"
                        android:textSize="20dp"
                        android:textColor="#fff"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <!--<ImageButton-->
                    <!--android:layout_width="55dp"-->
                    <!--android:layout_height="55dp"-->
                    <!--android:id="@+id/imageButton2"-->
                    <!--android:background="@mipmap/top"-->
                    <!--android:layout_gravity="center_horizontal"/>-->
                    <RelativeLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/f_img_set_head"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="@null"
                            android:src="@drawable/camera" />



                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--昵称-->
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="王长有"
                        android:id="@+id/f_txt_set_name"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:layout_marginRight="5dp"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_weight="0.24"
                android:gravity="center_vertical"
                android:background="#ffffff">
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/set_phone"/>
                <TextView
                    android:layout_marginTop="12dp"
                    android:textSize="18dp"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:textColor="#999"
                    android:text="187856484"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/f_linearlayout_set_use"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/set_instructions"/>
                <TextView
                    android:layout_marginTop="12dp"
                    android:textSize="18dp"
                    android:lines="1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:ellipsize="end"
                    android:textColor="#333"
                    android:text="使用说明"/>
                <ImageView

                    android:layout_marginTop="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/set_intent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/f_linearlayout_set_complaint"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/set_message"/>
                <TextView
                    android:layout_marginTop="12dp"
                    android:textSize="18dp"
                    android:lines="1"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:textColor="#333"
                    android:text="投诉建议"/>
                <ImageView

                    android:layout_marginTop="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/set_intent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/f_linearlayout_set_about"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/set_aboutus"/>
                <TextView
                    android:layout_marginTop="12dp"
                    android:textSize="18dp"
                    android:lines="1"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:textColor="#333"
                    android:text="关于我们"/>
                <ImageView

                    android:layout_marginTop="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/set_intent"/>
            </LinearLayout>
            <FrameLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <Button
                    android:id="@+id/f_btn_set_goout"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="20dp"
                    android:background="@drawable/shape_btn_addpoor"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="退出登录"
                    />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>