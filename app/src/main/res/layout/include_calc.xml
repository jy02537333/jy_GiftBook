<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <View
        android:id="@+id/i_calc_top_line_v"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_black_color" />
    <LinearLayout
        android:id="@+id/i_calc_value_lay"
        android:layout_below="@+id/i_calc_top_line_v"
        android:background="@color/background_color"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/i_calc_value_edit"
            android:layout_width="0dp"
            android:gravity="right|center_vertical"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="0"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingRight="10dp"/>
        <ImageView
            android:id="@+id/i_calc_del_btn"
            android:layout_marginRight="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/calc_close"/>
    </LinearLayout>
    <View
        android:id="@+id/i_calc_bottom_line_v"
        android:layout_below="@+id/i_calc_value_lay"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_black_color" />
    <LinearLayout
        android:id="@+id/i_calc_content_lay"
        android:padding="5dp"
        android:background="@color/background_color"
        android:layout_below="@+id/i_calc_bottom_line_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    style="@style/calc_style"
                    android:id="@+id/i_calc_num_1"
                    android:text="1"/>
                <Button
                    style="@style/calc_style"
                    android:id="@+id/i_calc_num_2"
                    android:text="2"/>
                <Button
                    style="@style/calc_style"
                    android:id="@+id/i_calc_num_3"
                    android:text="3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    style="@style/calc_style"
                    android:id="@+id/i_calc_num_4"
                    android:text="4"/>
                <Button
                    style="@style/calc_style"
                    android:id="@+id/i_calc_num_5"
                    android:text="5"/>
                <Button
                    style="@style/calc_style"
                    android:id="@+id/i_calc_num_6"
                    android:text="6"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    style="@style/calc_style"
                    android:id="@+id/i_calc_num_7"
                    android:text="7"/>
                <Button
                    style="@style/calc_style"
                    android:id="@+id/i_calc_num_8"
                    android:text="8"/>
                <Button
                    style="@style/calc_style"
                    android:id="@+id/i_calc_num_9"
                    android:text="9"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    style="@style/calc_style"
                    android:id="@+id/i_calc_num_p"
                    android:text="."/>
                <Button
                    style="@style/calc_style_2"
                    android:id="@+id/i_calc_num_0"
                    android:text="0"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1.5">
            <LinearLayout
                android:id="@+id/i_calc_backspace_lay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#cccccc"
                android:gravity="center"
                >
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/i_calc_backspace_btn"
                android:background="@mipmap/calc_backspace" />
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:background="#0084C6"
                android:textColor="#ffffff"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:id="@+id/i_calc_confirm"
                android:text="完成"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>