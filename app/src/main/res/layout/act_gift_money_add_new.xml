<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <pri.zxw.library.view.TitleBar
        xmlns:titleBarStyle="http://schemas.android.com/apk/res-auto"
        android:id="@+id/act_gift_money_add_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titleBarStyle:left_visibility="visible"
        titleBarStyle:text="记一笔" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/act_gift_money_add_date_tv"
                    style="@style/f_gift_member_add_btn_border"
                    android:text="03-03"/>
                <TextView
                    android:id="@+id/act_gift_money_add_name_tv"
                    style="@style/f_gift_member_add_btn_border"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:hint="收礼人"
                    android:textColorHint="@color/com_hint_font_gray_color"
                    android:inputType="text"
                    android:maxLength="10" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/a_gift_money_add_wedding_type_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/wedding"
            android:text="结婚"/>
            <TextView
                android:id="@+id/a_gift_money_add_birthday_type_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="寿宴"/>
            <TextView
                android:id="@+id/a_gift_money_add_hundredth_type_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="百日"/>
            <TextView
                android:id="@+id/a_gift_money_add_other_type_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="其它"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/act_gift_money_add_remark_tv"
                android:layout_marginLeft="10dp"
                android:hint="备注"
                android:textColorHint="@color/com_hint_font_gray_color"
                android:inputType="text"
                android:maxLength="200"
                />
        </LinearLayout>

    </LinearLayout>

    <fragment
        android:id="@+id/act_gift_money_add_fragment"
        android:name="com.zxw.giftbook.fragment.CalcFragment"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </fragment>
</LinearLayout>