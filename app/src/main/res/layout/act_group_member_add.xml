<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <pri.zxw.library.view.TitleBar
        xmlns:titleBarStyle="http://schemas.android.com/apk/res-auto"
        android:id="@+id/act_group_member_add_title_bar"
        android:layout_width="match_parent"
        titleBarStyle:left_visibility="visible"
        android:layout_height="wrap_content"
        titleBarStyle:text="添加亲朋" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/act_group_member_add_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/edit_text"
            android:textColorHint="@color/font_com_gray_color"
            android:hint="输入姓名"
            android:inputType="text"
            android:maxLength="10" />

        <EditText
            android:id="@+id/act_group_member_add_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/edit_text"
            android:textColorHint="@color/font_com_gray_color"
            android:hint="输入电话"
            android:inputType="phone"
            android:maxLength="15" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/edit_text">
            <TextView
                android:id="@+id/act_group_member_add_type_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="80dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:maxLength="20"
                android:textColorHint="@color/font_com_gray_color"
                android:hint="选择分组" />
            <TextView
                android:id="@+id/act_group_member_add_type_add_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_bg_app_btn"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                android:visibility="gone"
                android:textColor="@color/com_base_btn_color"
                android:text="添加分组"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/act_group_member_add_type_add_tv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/drop_down"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/edit_text">
            <TextView
                android:id="@+id/act_group_member_add_affiliated_person_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="80dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:maxLength="20"
                android:textColorHint="@color/font_com_gray_color"
                android:hint="选择关联人" />
            <TextView
                android:id="@+id/act_group_member_add_affiliated_person_add_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_bg_app_btn"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                android:textColor="@color/com_base_btn_color"
                android:text="添加关联人"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/act_group_member_add_affiliated_person_add_tv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/drop_down"/>
        </RelativeLayout>
        <Button
            android:id="@+id/act_group_member_add_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/select_shape_bg_btn"
            android:textColor="@color/font_btn_bg_color"
            android:text="添加"/>
    </LinearLayout>
</LinearLayout>