<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 首页流水账 -->
    <RelativeLayout
        android:id="@+id/item_list_f_home_journal_account_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/item_list_f_home_journal_account_alt_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@mipmap/plus_alt" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/item_list_f_home_journal_account_alt_img"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_list_f_home_journal_account_name_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/com_font_black"
                android:text="姓名" />
        <TextView
            android:id="@+id/item_list_f_home_journal_account_fee_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/com_font_money_red"
            android:gravity="center"
            android:text="800" />


            <TextView
                android:id="@+id/item_list_f_home_journal_account_type_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/com_font_black"
                android:text="结婚" />
            <TextView
                android:id="@+id/item_list_f_home_journal_account_date_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="2016.01.01" />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/item_list_f_home_journal_account_content"
        android:background="@color/com_line_color"/>
</RelativeLayout>