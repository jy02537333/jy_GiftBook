<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/landing_logo"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:id="@+id/imageView" />
        <TextView
            android:textSize="18dp"
            android:textColor="#F53A32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="贵州国家高新区党政办"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <TextView
        android:textSize="22dp"
        android:textColor="#F53A32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="精准扶贫平台"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:paddingLeft="40dp"
                android:id="@+id/act_edit_landing_phone"
                android:background="@drawable/shap_dialog_edit_bg"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/landing_phone"
                android:textSize="15dp"/>
            <ImageView
                android:layout_marginLeft="8dp"
                android:id="@+id/syncOperatorImg"
                android:layout_alignLeft="@+id/act_edit_landing_phone"
                android:layout_alignTop="@+id/act_edit_landing_phone"
                android:layout_alignBottom="@+id/act_edit_landing_phone"
                android:src="@mipmap/landing_phone"
                android:layout_height="25dp"
                android:layout_width="25dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <EditText
            android:paddingLeft="40dp"
            android:textSize="15dp"
            android:id="@+id/edit_landing_password"
            android:background="@drawable/shap_dialog_edit_bg"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="85dp"
            android:layout_width="match_parent"
            android:hint="输入密码"
            android:layout_height="50dp" />
            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_alignLeft="@+id/edit_landing_password"
                android:layout_alignTop="@+id/edit_landing_password"
                android:layout_alignBottom="@+id/edit_landing_password"
                android:src="@mipmap/landing_password"

                android:layout_height="25dp"
                android:layout_width="25dp"/>
            <ImageView
                android:layout_marginTop="6dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/landing_showwold"
                android:layout_alignTop="@+id/edit_landing_password"
                android:layout_alignEnd="@+id/edit_landing_password" />
        </RelativeLayout>

    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/act_btn_landing_landing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登陆"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_btn_addpoor"
            />
        <TextView
            android:id="@+id/act_txt_landing_forgetPsd"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textColor="#333"
            android:textSize="17dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/act_btn_landing_register"
            android:textColor="#999999"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_btn_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新用户？立即注册"/>
    </LinearLayout>
</LinearLayout>