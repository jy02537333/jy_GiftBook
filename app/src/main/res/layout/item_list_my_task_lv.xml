<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <ImageView 
         android:id="@+id/item_list_my_task_img"
          android:layout_margin="5dp"
        android:contentDescription="@string/app_name"
         android:layout_width="80dp"
    android:layout_height="80dp" 
    android:src="@mipmap/logo" />
    <LinearLayout 
           android:layout_margin="5dp"
         android:layout_width="0dp"
    android:layout_height="80dp"
    android:layout_weight="5" 
    android:orientation="vertical" >
            <TextView   
                android:id="@+id/item_list_my_task_title_tv"
                android:layout_width="match_parent"
    android:layout_height="25sp" 
    android:textSize="17sp"
    android:text="陆小凤" />
               <TextView   
                android:id="@+id/item_list_my_task_address_tv"
                android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:textSize="12sp"
    android:text="地址：风家村" />
                  <TextView   
                      android:layout_marginTop="5dp"
                android:id="@+id/item_list_my_task_date_tv"
                android:layout_width="match_parent"
    android:layout_height="25sp" 
    android:textSize="12sp"
    android:text="领取时间：2016/06/06" />
    </LinearLayout>
 	<LinearLayout 
 	    android:layout_marginTop="20dp"
 	    android:layout_marginBottom="20dp"
 	     android:layout_marginLeft="5dp"
 	    android:layout_marginRight="5dp"
         android:layout_width="0dp"
    android:layout_height="50dp"
    android:layout_weight="1.5" 
    android:orientation="vertical" >
 	    <TextView  
 	         android:id="@+id/item_list_my_task_interview_btn_tv"
 	          android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:textSize="18sp"
    android:layout_gravity="center"
    android:gravity="center"
    />
 	</LinearLayout>
</LinearLayout>
