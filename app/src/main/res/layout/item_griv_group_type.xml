<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/item_griv_group_type_lay"
        android:background="@drawable/shape_btn_layout_left_not_bottom_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/item_griv_group_type_framelay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/item_griv_group_type_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/select_shape_bg_btn"
                android:textColor="@color/font_btn_bg_color"
                android:text="朋友"/>
            <ImageView
                android:id="@+id/item_griv_group_type_add_img"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="25dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/add_icon"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/item_griv_group_type_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:layout_marginTop="45dp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/item_griv_group_type_txt_size"
            android:textColor="@color/font_com_title_black_color"
            android:text="8"/>
    </RelativeLayout>
</RelativeLayout>