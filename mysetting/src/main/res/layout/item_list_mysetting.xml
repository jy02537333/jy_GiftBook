<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_list_mysetting_lay"
            style="@style/my_update_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_update_lay_height"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_list_mysetting_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/account" />

            <TextView
                android:id="@+id/item_list_mysetting_name"
                style="@style/my_update_font"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="名称"></TextView>

            <TextView
                android:id="@+id/item_list_mysetting_desc"
                style="@style/my_update_font"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="描述"></TextView>

            <TextView
                android:id="@+id/item_list_mysetting_arrows"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/arrows"
                android:gravity="right|center_vertical"
                android:textSize="18sp"
                android:textStyle="normal"></TextView>
        </LinearLayout>
        <!-- 账号管理end -->
        <TextView
            android:id="@+id/item_list_mysetting_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eaeaea"></TextView>
    </LinearLayout>
</LinearLayout>
