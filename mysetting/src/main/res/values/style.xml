<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 更新 -->
    <style name="ProgressBarHorizontal_color" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/layer_list_loading_progress_bar</item>
        <item name="android:minHeight">2dip</item>
        <item name="android:maxHeight">2dip</item>
    </style>
    <!-- 更新 end -->

    <style name="title_bar_style">
        <item name="android:background">@drawable/shape_bg_titlebar</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="top_update_count_base">
        <item name="android:textSize">13.0sp</item>
        <item name="android:shadowDy">-1.0</item>
    </style>

    <style name="top_update_count">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">#ffcc3131</item>
        <item name="android:gravity">center</item>
        <item name="android:height">15.0dip</item>
        <item name="android:width">15.0dip</item>
    </style>
    <style name="title_text_style">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="my_update_lay">
        <item name="android:layout_height">@dimen/my_update_lay_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/selector_mysetting_bg_white_btn</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="my_update_font">
        <item name="android:textSize">16sp</item>
         <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
