<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_title_bar_root"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_bar_h"
    android:background="@color/view_top_layout_bg" >

    <RelativeLayout
        android:id="@+id/title_left_lay"
        android:layout_width="60dip"
        android:layout_height="fill_parent"
        android:background="@drawable/view_title_var_arrow_selector"
        android:gravity="center" >

        <ImageView
            android:id="@+id/title_left_iv"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:background="@mipmap/white_left_arrow" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/title_bar_box_lay"
        android:layout_width="194dp"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title_bar_tv"
            style="@style/title.text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxWidth="160dp"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/title_bar_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/title_bar_right_lay"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/view_title_var_arrow_selector" >

        <TextView
            android:id="@+id/title_bar_right_tv"
            style="@style/title.right.text"
            android:textColor="#ffffffff"
            android:paddingRight="7dp"
            android:textSize="@dimen/h4"  />

        <ImageView
            android:id="@+id/title_bar_right_iv"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>