<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title.text" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="title.right.text" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/title_right_color</item>
        <item name="android:textSize">@dimen/h6</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
</resources>